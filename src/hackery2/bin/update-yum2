#!/usr/bin/env bash
set -x
sudo cp ~/hackery2/src/data/sudoers.d/README /etc/sudoers.d/hackery
sudo chmod 0440 /etc/sudoers.d/hackery

#sudo powertop --auto-tune

sudo ntpdate  -v  ntp.ubuntu.com &&
{
{
sudo apt update &&
sudo unattended-upgrade -d
} ||
sudo yum update  -y --security
} && {
#apt install debian-goodies needrestart reboot-notifier
/usr/lib/update-notifier/apt-check -p --human-readable ||
checkrestart -v ||
needrestart
}
