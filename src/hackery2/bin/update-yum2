#!/usr/bin/env bash
set -x

sudo ntpdate  -v  ntp.ubuntu.com &&
{
	{
		sudo aptdcon --refresh &&
		#sudo unattended-upgrade --debug
		sudo unattended-upgrade
	} ||
	sudo yum update  -y --security
} && {
	sudo checkrestart -v && 
	needrestart 
	#&& /usr/lib/update-notifier/apt-check --human-readable 
}

