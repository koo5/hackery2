#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import os, sys
import click

@click.command()
@click.argument('directory', nargs=1, type=click.Path(allow_dash=True, exists=False), required=True)
def main(directory):
	"""create DIRECTORY and cd into it.
	'md' is a shorthand for mkdir+cd"""
	try:
		os.mkdir(directory)
	except FileExistsError as e:
		print(e, sys.stderr)
		return
	os.chdir(directory)



if __name__ == "__main__":
	main()







""" note: i'm pondering using the "setuptools method for my scripts, but i'd have to automate the mass-install somehow. """
